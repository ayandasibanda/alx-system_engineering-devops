#!/bin/bash

# Install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Get the hostname of the server
hostname=$(hostname)

# Configure Nginx with custom HTTP response header
echo "add_header X-Served-By $hostname;" | sudo tee -a /etc/nginx/nginx.conf

# Restart Nginx to apply changes
sudo service nginx restart

# Output a message indicating successful configuration
echo "Nginx configured with custom HTTP response header on $hostname"

